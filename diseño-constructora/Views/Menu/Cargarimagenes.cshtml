@model Modelos.Imagenes

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cargarimagenes</title>
</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" id="from-actions-multiple">Selecionar imagenes</h4>
                    <div class="alert alert-info" role="alert">
                        <strong>Imagenes</strong>
                    </div>

                </div>
                <div class="card-body">
                    <div class="px-3">
                        <div class="container">
                            <div class="panel panel-primary">
                                <div class="panel-body">

                                    <form action="/Menu/ingresar" method="post" enctype="multipart/form-data">

                                        <h4 class="text-center">Cargar Multiple Imagenes</h4>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Imagenes</label>
                                            <div class="col-sm-8">
                                                <input type="file" class="form-control" id="archivo[]" name="archivo[]" multiple="">
                                            </div>
                                            <br />
                                            <button type="submit" class="btn btn-primary">Cargar</button>
                                        </div>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
